@model NotaAzul.ViewModels.ContasPagar.vmDados

@{
    ViewBag.Title = "Contas à pagar :: " + @ViewBag.NomeProjeto;
}

<script language="javascript" type="text/javascript">
    Prion.Loader.Carregar([
        rootDir + "Scripts/Views/ContasPagar/dados.js"
    ]);
</script>


<div class="body">
    <form id="frmContasPagar" name="frmContasPagar" action="" method="post">
        <input type="hidden" id="TituloPago_Id" name="Titulo.Id" primary-key="true" />

        <div class="st-form-line">
            <label class="st-labeltext" for="Titulo_Numero" style=";width:69px;">Número</label>
            <input type="text" class="st-forminput" id="Titulo_Numero" name="Titulo.Numero" maxlength="50" style="width: 225px;float: left;margin-left: 30px;" />
            <div class="clear"></div>
        </div> 
        
        <div class="st-form-line">
            <label class="st-labeltext" for="Titulo_Descricao" style="width: 100px;">Descrição</label>
            <input type="text" class="st-forminput" id="Titulo_Descricao" name="Titulo.Descricao" maxlength="255" style="width:450px;" mandatory="true" message="A descrição não pode ser vazia" />
            
            <div class="clear"></div>
        </div>  
         
        <div class="st-form-line">
            <label class="st-labeltext" for="Titulo_Observacao" style="width: 30px;margin-right: 70px;">Observação</label>
            <textarea class="st-forminput" id="Titulo_Observacao" name="Titulo.Observacao" style="width:450px;" cols="4" rows="4" maxlength="255"></textarea>

            <div class="clear"></div>
        </div>
        
        <div class="st-form-line">
            <label class="st-labeltext" for="Titulo_Valor" style="width: 100px;">Valor</label>
            <input type="text" class="st-forminput" id="Titulo_Valor" name="Titulo.Valor" mask="money" style="width:100px;float: left;" mandatory="true" message="O valor não pode ser vazio" />
       
            <label class="st-labeltext" for="Titulo_Desconto" style="width: 120px;margin-left: 50px;">Desconto</label>
            <input type="text" class="st-forminput" id="Titulo_Desconto" name="Titulo.Desconto" mask="money" style="width: 100px;float: left;" />

            <div class="clear"></div>
        </div>

        <div class="st-form-line">
            <label class="st-labeltext" for="Titulo_DataVencimento" style="width:100px;">Vencimento</label>
            <input type="text" class="st-forminput" id="Titulo_DataVencimento" name="Titulo.DataVencimento" maxlength="12" style="width:100px;float:left;"  mask="dd/mm/aaaa" />

            <label class="st-labeltext" for="Titulo_DataOperacao" style="width:120px;margin-left: 50px;">Data do Pagamento</label>
            <input type="text" class="st-forminput" id="Titulo_DataOperacao" name="Titulo.DataOperacao" maxlength="12" style="width:100px;" mask="dd/mm/aaaa" />
            <div class="clear"></div>
        </div>        
       
    </form>
</div>