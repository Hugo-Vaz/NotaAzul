<div id="divTelefone" style="width: 97%; border: 1px solid rgb(154, 169, 170); margin: 0px auto; margin-top: 30px; position: relative;">
    <div class="tituloDiv">Telefones</div>

    <form id="formTelefone0" name="formTelefone" indicetelefone="0" action="" method="post" >
        <div class="st-form-line">
            <input type="hidden" id="idTelefone0" name="Id" />
            <input type="hidden" id="telefoneEstado0" name="EstadoObjeto" />
            <label class="st-labeltext" for="Telefone_DDD" style="width: 110px;">DDD</label>

            <div style="width:496px; float:left;">
                <input type="text" class="st-forminput" id="Telefone_DDD" name="Ddd" maxlength="2" style="position:relative;float:left;width:30px;" />
                <label class="st-labeltext2" for="Telefone_Numero" style="position:relative; float:left;">Número</label>
                <input type="text" class="st-forminput" id="Telefone_Numero" name="Numero" maxlength="10" style="position:relative;float:left;width:160px;" />

                <label style="color: #3C5868; position:relative; top:6px; margin-right:10px; float:left;left: 10px;">Residencial
                    <input type="radio" class="uniform" id="TipoResidencial" name="TipoTelefone0" value="Residencial"/>
                </label> 

                <label style="color: #3C5868; position:relative; top:6px; margin-right:10px; float:left;left: 10px;">Comercial
                    <input type="radio" class="uniform" id="TipoComercial" name="TipoTelefone0" value="Comercial"/>
                </label>
            </div>
            <div class="clear"></div>
        </div>

        <div class="st-form-line">
            <label class="st-labeltext" for="Telefone_Observacao" style="width: 110px;">Observação</label>
            <input type="text" class="st-forminput" id="Telefone_Observacao" name="Observacao" maxlength="255" style="width:480px;" />
            <div class="clear"></div>
        </div>

        <div class="st-form-line">
            <label class="st-labeltext" for="Telefone_Preferencial" style="width: 110px;">Número Preferencial</label>

            <label class="radio" style="margin-right:10px">Sim
                <input type="radio" class="uniform" id="PreferencialSim" telefonepreferencial="false" checked="checked" name="Preferencial0" value="true"/>
            </label> 

            <label class="radio" style="margin-right:10px">Não
                <input type="radio" class="uniform" id="PreferencialNao" telefonepreferencial="false" name="Preferencial0" value="false"/>
            </label>

            <input type="button" value="Remover" id="btnRemoverTelefone" name="removerTelefone" class="st-clear" style="position:relative;left:18px;"/>
            <div class="clear"></div>
        </div>
    </form>
</div>

<input type="button" value="Adicionar outro telefone" id="btnNovoTelefone" class="button-green" style="position:relative;left:18px;"/>
